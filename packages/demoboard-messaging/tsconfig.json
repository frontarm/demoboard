{
    "compilerOptions": {
        "downlevelIteration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist/es",
        "removeComments": false,
        "sourceMap": true,
        "lib": [
            "es5",
            "es6",
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}